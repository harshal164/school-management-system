<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
    <!--list view -->
    <record id="teacher_tree11" model="ir.ui.view">
        <field name="name">teacher.tree.view</field>
        <field name="model">school.teacher</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree >
                <field name="teacher_id" string="ID"/>
                <field name="name" string="Name"/>
                <field name="gender" string="Gender"/>
                <field name="school_id" string="School"/>
                <field name="dept_id" string="Department"/>
                <field name="job_position" string="Job Position"/>
            </tree>
        </field>
    </record>



<!-- form view-->
<record id="teacher_view_form" model="ir.ui.view">
    <field name="name">school.teacher.form</field>
    <field name="model">school.teacher</field>
    <field name="priority">5</field>
    <field name="arch" type="xml">
        <form name="form view">
            <sheet>
                <separator string="Teacher Information" class="text-center"/>
                <field name="photo" widget="image" class="oe_avatar"/>
                <h1 class="oe_title">
                    <field name="name_title" readonly="1"/>
                </h1>
                <group col="4">
                    <field name="teacher_id"/>
                    <field name="name" string="Name" placeholder="teacher name"/>
                    <field name="gender" widget="radio" options="{'horizontal':True}"/>
                    <field name="school_id" options="{'no_create_edit':True}" required="1" string="School"/>
                    <field name="dept_id" string="Department" options="{'no_open':True}"/>
                    <field name="job_position" string="Job Position"/>

                </group>
           </sheet>
        </form>
    </field>
</record>



    <!--action-->
    <record id="action_to_teacher" model="ir.actions.act_window">
        <field name="name">teacher</field>
        <field name="res_model">school.teacher</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem action="action_to_teacher" id="teacher_sub" name="teacher" parent="school_top" sequence="3" />
    </data>
</odoo>